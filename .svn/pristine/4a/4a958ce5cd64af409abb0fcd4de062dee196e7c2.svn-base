.operation_bar {
	height: 45px;
    background: rgba(000,000,000,.7);
    bottom: 0;
}
.operation_con { 
	width: 98%;
    margin-left: 10px;
    color: #fff;
    font-size: 12px;
    height: 45px;
}
.operation_con label {
	display: block;
	float: left;
	line-height: 45px;
	cursor: pointer; 
}
.operation_con label input[type=checkbox]{
	vertical-align: middle;
	margin-right: 4px;
}
.operation_con button {
    border: none;
    padding: 4px;
    border-radius: 11px;
    margin: 10px 0 0 8px;
    position: relative;
    font-size: 12px;
}
.operation_con button.delete {
    background: #f96261;
}
.operation_con .button {
	border: none;
    padding: 4px 12px;
    border-radius: 6px;
    margin: 10px 0 0 8px;
    position: relative;
}
.operation_con button, 
.operation_con .button {
	color: #fff;
    background-color: #38a9e1;
    display: block;
    float: left;
    cursor: pointer;
}
.li_seccon {
	position: absolute;
	top: -104px;
	left: -5px;
	width: 70px;
	z-index: 100;
    border: 1px solid #e9e9e9;
    background: #fff;
    border-radius: 5px 5px 0 0;
	box-shadow: 0 6px 12px rgba(0,0,0,.175);
}
.li_seccon dl {
	width: 100%;
    margin: 0;
}
.li_seccon dl dd a {
    display: block;
    width: 100%;
    height: 30px;
    text-align: left;
	text-indent: 10px;
    line-height: 30px;
    font-size: 12px;
    color: #333;
}
.li_seccon dl dd a:hover {
	color: #38a9e1;
	background: #f3f3f3;
}

.li_seccon dl dd a.hover {
	color: #38a9e1;
	background: var(--bg-judgment_markicon) 68px 7px no-repeat #f3f3f3;
}
.li_seccon1 {
	text-align: center;
	text-indent: 0px;
}
.li_seccon2 {
    top: -122px;
    width: 84px;
}
.li_seccon3 {
	top: -62px;
	width: 90px;
}
.sort {
    width: 84px;
    line-height: 45px;
    font-size: 12px;
    margin-left: 15px;
    float: right;
    position: relative;
}
.sort span {
    width: 87px;
    height: 25px;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    background: rgba(000,000,000,.4);
    display: block;
    float: left;
    line-height: 25px;
    text-indent: 10px;
    margin-top: 10px;
    cursor: pointer;
    position: relative;
}   
.sort span i {
	display: inline-block;
	width: 10px;
	height: 10px;
	margin-left: 8px;
	box-sizing: border-box;
}
.sort span i.pagesj {
    height: 7px;
    margin-top: 5px;
    background: var(--bg-judgment_pagesj) no-repeat;
}
.operation_con p {
	float: right;
    line-height: 45px;
    font-size: 12px;   
}
.operation_con p label {
	display: inline-block;
	margin-left: 10px;
}
/*浮层样式*/
.ops_attention {
    float: left;
    margin: 10px 0 0 8px;
    position: relative;
}
.ops_attention a {
    color: #fff;
    background-color: #38a9e1;
    display: block;
    float: left;
    padding: 4px;
    border-radius: 11px;
    font-size: 12px;
    cursor: pointer;
}
.ops_mask {
    position: absolute;
    background: #fff;
    width: 130px;
    height: 200px;
    right: -48px;
    bottom: 40px;
    border-radius: 2px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.175);
    box-shadow: 0 0 15px #ccc;
    z-index: 333;
    padding: 4px 0;
    color: #222222;
    font-size: 14px;
    line-height: 32px;
    text-align: left;
}
.ops_mask:before {
    content: "";
    width: 0;
    height: 0;
    border-width: 10px;
    border-style: solid;
    border-color: #fff transparent transparent transparent;
    position: absolute;
    bottom: -20px;
    left: 51px;
}
.ops_title {
    color: #222;
    font-size: 14px;
    font-weight: bold;
    cursor: default;
}
.ops_mask span {
    display: block;
    padding-left: 10px;
}
.ops_sort {
    cursor: pointer;
}
.ops_mask .ops_sort:hover {
    background: #EDF3FD;
}
.blue_txt {
    color: #5090F1;
}
.arrow_up {
    width: 0;
    height: 0;
    border-width: 10px;
    border-style: solid;
    border-color: #fff transparent transparent transparent;
    margin: 4px 0 0 52px;
}
@media screen  and (max-width:1240px){
  .operation_bar .operation_con .sort{margin-left: 5px;}
}
