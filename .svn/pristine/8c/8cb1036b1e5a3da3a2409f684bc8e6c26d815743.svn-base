.model_3 {
	/*margin-bottom: 2px;*/
}
.iconbg_03 {
	width: 24px;
	height: 24px;
	margin-right: 6px;
	background-position: -74px 0;
	vertical-align: middle;
}
.model_content_box {
	padding: 2px 0;
	overflow:hidden;
}
.model_content {
	height: 100%;
	padding: 4px 6px 4px 4px;
}
.article_item {
	height: 74px;
    position: relative;
    border-bottom: 1px dashed var(--c-f1);
}
.article_item:last-child {
	border-bottom: none;
}
.shadow_wrapper {
    height: 100%;
    position: relative;
    width: 100%;
}
.shadow_card {
	height: 78px;
	position: absolute;
    top: -2px;
    left: 0px;
    right: 0px;
    z-index: 101;
    transition: all .2s linear;
}
.shadow_wrapper:hover .shadow_card {
	background: var(--c-white);
    box-shadow: 0 0 4px 2px rgba(0,0,0,0.08);
}
.shadow_content {
    width: 100%;
	height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 102;
    padding: 14px 0px;
    margin: 0 0 0 4px;
}
.item_top {
	height: 24px;
	line-height: 24px;
}
.item_icon {
	width: 6px;
	height: 6px;
	background-position: -68px -81px;
	margin-right: 10px;
}
.item_title {
	font-size:15px;
	color: var(--c-2);
	line-height:24px;
	padding-right: 10px;
	letter-spacing: 1px;
}
.shadow_wrapper:hover .item_title {
	color: var(--c-2b7cd5);
}
.item_btom {
	color: var(--c-8);
	font-size:12px;
	padding-left: 16px;
	height: 16px;
	line-height: 16px;
	margin-top: 8px;
}
.item_time {
	margin-right: 20px;
}
.icon_border_unicom {
	background: none;
	display: inline-block;
    width: 6px;
    height: 16px;
    margin-right: 5px;
    background: var(--border-5b9fea);
    vertical-align: top;
    margin-top: 3px;
	margin-left: 10px;
}
.model_content_box_unicom {
	background: var(--bg-rgb2556);
}