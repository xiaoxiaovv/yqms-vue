.judgment_bind_box {
	text-align: right;
    padding-top: 4px;
}
.bind_box {
	font-size: 12px;
}
.bind_box span {
	display: inline-block;
}
.bind_txt {
	color: #333;
}
.bind_btn {
	color: #fff;
	background: #5B9FEA;
	border-radius: 2px;
	padding: 1px 4px;
	cursor: pointer;
	margin: 0 10px 0 16px;
}
.judgment_bind_content {
	margin-top: 40px;
}
.qr_code_box {
	width: 150px;
	height: 150px;
	margin: 0 auto;
}
.qr_code_box img {
	display: block;
	width: 150px;
	height: 150px;
}
.qr_txt {
	color: #333333;
	font-size: 14px;
	text-align: center;
	margin-bottom: 60px;
}