.model_5 {
	/*margin-bottom: 2px;*/
}
.model_content_box {
	padding: 2px 0;
	overflow: hidden;
}

.model_content {
	height: 100%;
	padding: 4px 6px 4px 4px;
}

.topic_item {
	position: relative;
	border-bottom: 1px dashed var(--c-f1);
}

.topic_item:last-child {
	border-bottom: none;
}

.topic_shadow_wrapper {
	height: 100%;
	position: relative;
	width: 100%;
}

.topic_shadow_card {
	position: absolute;
	top: -2px;
	left: 0px;
	right: 0px;
	bottom: -2px;
	z-index: 101;
	transition: all .2s linear;
}

.topic_shadow_wrapper:hover .topic_shadow_card,
.topic_shadow_wrapper.hover .topic_shadow_card {
	background: var(--c-white);
	box-shadow: 0 0 4px 2px rgba(0,0,0,0.08);
}

.topic_shadow_content {
	width: 100%;
	height: 100%;
	position: relative;
	z-index: 104;
	padding: 13px 0px;
	margin: 0 0 0 4px;
}

.tendency {
	display: block;
	width: 18px;
	height: 20px;
	background: var(--bg-centericons) no-repeat -11px -149px;
	margin: 2px 11px 0 0;
}

.zheng {
	background-position: -11px -149px;
}

.fu {
	background-position: -43px -149px;
}

.zhong {
	background-position: -74px -149px;
}

.topic_img_box {
	width: 128px;
	height: 78px;
	overflow: hidden;
	margin-right: 13px;
}

.topic_img {
	display: block;
	width: 128px;
	height: 78px;
}

.topic_info_box {
	padding-right: 10px;
}

.topic_title {
	font-size: 15px;
	color: var(--c-23);
	line-height: 24px;
	overflow: hidden;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	word-break: break-all;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	word-wrap: break-word;
	word-break: break-all;
	letter-spacing: 1px;
}
/*有图片时，标题高度*/
.topic_title_img {
	height: 48px;
}

.topic_shadow_wrapper:hover .topic_title {
	color: var(--c-2b7cd5);
}

.topic_info {
	font-size: 13px;
	color: var(--c-8);
	line-height: 24px;
	margin-top: 14px;
	height: 16px;
	line-height: 16px;
}

.topic_time {
	margin-right: 30px;
}

.switch_topic {
	z-index: 2000;
	position: absolute;
	top: 52px;
	left: 0;
	width: 100%;
	height: calc(100% - 55px);
	height: -moz-calc(100% - 55px);
	height: -webkit-calc(100% - 55px);
	background: rgba(255, 255, 255, 1);
	border: 1px solid var(--c-e3);
	box-sizing: border-box;
	box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	overflow: hidden;
}

.switch_topic .switch_title {
	font-size: 15px;
	color: var(--c-3);
	height: 46px;
	line-height: 46px;
	border-bottom: 1px solid var(--c-e3);
	margin-bottom: 20px;
}

.switch_topic .close_switch {
	position: absolute;
	right: 10px;
	top: 10px;
	font-size: 20px;
	color: #acacac;
	width: 10px;
	height: 10px;
	line-height: 10px;
	text-align: center;
	cursor: pointer;
}

.filter_input {
	-webkit-appearance: none;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	color: #606266;
	display: inline-block;
	font-size: inherit;
	outline: 0;
	padding: 0 15px;
	-webkit-transition: border-color .2s cubic-bezier(.645, .045, .355, 1);
	transition: border-color .2s cubic-bezier(.645, .045, .355, 1);
	width: calc(100% - 40px);
	width: -moz-calc(100% - 40px);
	width: -moz-calc(100% - 40px);
	height: 32px;
	line-height: 32px;
	border: 1px solid rgba(219, 219, 219, 1);
	border-radius: 6px;
	margin: 0 20px 10px;
}

.search {
	display: inline-block;
	position: absolute;
	top: 70px;
	right: 25px;
	content: '';
	height: 20px;
	width: 20px;
	background: var(--bg-centericons) no-repeat;
	background-position:-182px -150px;
}

.v_srcoll {
	padding: 0 40px !important;
	box-sizing: border-box;
}
.change_tree {
	height: 360px;
    margin: 0 20px;
    overflow-y: scroll;
}

.icon_border_unicom {
	margin-left: 10px;
	width: 6px;
}
.icon_border_unicom_right {
	margin-right: 10px;
}
.model_content_box_unicom {
	background: var(--bg-rgb2556);
}