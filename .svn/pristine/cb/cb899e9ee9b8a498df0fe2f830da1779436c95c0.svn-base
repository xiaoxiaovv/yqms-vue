.dialog {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: rgba(0, 0, 0, 0.5);
	z-index: 9999;
}

.dialog_title {
	position: relative;
	top: 0;
	left: 0;
	padding: 15px 0;
	border-bottom: 1px solid #e3e3e3;
	color: var(--c-58aada);
	text-indent: 20px;
	font-weight: 700;
	font-size: 16px;
}

.dialog_close{
	position: absolute;
	top: -12px;
	right: -42px;
	display: inline-block;
	width: 25px;
	height: 25px;
	background: var(--bg-close-old) no-repeat center #fff;
	border-radius: 50%;
}

.dialog_container {
	width: 70%;
	/*min-height: 400px;*/
	background: #ffffff;
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-ms-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	padding: 0 30px 30px;
}